#!/bin/bash

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/internal/shared"

echo "Running Docker container..."
docker run --rm -it \
  -v "$PROJECT_ROOT:/workspace" \
  -w /workspace \
  --name "$CONTAINER_NAME" \
  --entrypoint /bin/bash \
  "$IMAGE_NAME" -l

echo "Container execution completed."
